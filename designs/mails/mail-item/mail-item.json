{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "50px",
                    "minHeight": "50px",
                    "items": [
                        {
                            "type": "Image",
                            "style": "Person",
                            "url": "${$root.personimage}",
                            "size": "Medium",
                            "width": "50px",
                            "height": "50px"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${$root.from}",
                                            "size": "Default",
                                            "weight": "Bolder",
                                            "maxLines": 1,
                                            "spacing": "Small"
                                        }
                                    ],
                                    "width": 6,
                                    "verticalContentAlignment": "Top"
                                },
                                {
                                    "type": "Column",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "${$root.time}",
                                            "size": "Default",
                                            "horizontalAlignment": "Right",
                                            "maxLines": 2,
                                            "spacing": "Small"
                                        }
                                    ],
                                    "width": 2,
                                    "verticalContentAlignment": "Top"
                                }
                            ]
                        },
                        {
                            "type": "TextBlock",
                            "text": "${$root.subject}",
                            "wrap": true,
                            "size": "Default",
                            "maxLines": 2,
                            "spacing": "Small"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                }
            ]
        }
    ]
}